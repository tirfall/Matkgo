<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Matkgo.Views.DBGuidePage"
             Title="DBGuidePage">
    <StackLayout>
        <Label Text="Title"/>
        <Entry Text="{Binding Title}" x:Name="Title"/>
        <Label Text="Description"/>
        <Entry Text="{Binding Description}" x:Name="Description"/>
        <Label Text="Equipment"/>
        <Entry Text="{Binding Equipment}" x:Name="Equipment"/>
        <Label Text="safetyTips"/>
        <Entry Text="{Binding safetyTips}" x:Name="safetyTips"/>
        
        <HorizontalStackLayout>
            <Button Text="Save" Clicked="SaveGuide" WidthRequest="130" TextColor="White" BackgroundColor="Green"/>
            <Button Text="Delete" Clicked="DeleteGuide" WidthRequest="130" TextColor="White" BackgroundColor="Green"/>
            <Button Text="Cancel" Clicked="Cancel" WidthRequest="130" TextColor="White" BackgroundColor="Green"/>
        </HorizontalStackLayout>
    </StackLayout>
</ContentPage>